// Config file that won't be edited by individual users and will remain constant; contains parameters such as containers to use/walltime/memory

//====================  Nextflow/Container Config  ==========

// Mouse only
// Note: if extension='.bam' the pipeline will use the premapped reads,
//       this we assume that the .bam is NOT zipped.

manifest {
    name = "mmrsvd"
    description = 'Pipeline for Mouse Mutant Resourcse Structural Variant Detection'
    author = 'Anuj Srivastava, Carolyn Paisie, Barry Guglielmo Copyright Jackson Laboratory 2021'
    version = "0.1.0"
}

params{
  sample_folder = '/projects/compsci/guglib/testing_sequences/wes'
  extension='.fastq.gz'
  pattern="*_R{1,2}*"
  read_type = 'PE' // SE
  seq_method = 'illumina' // pacbio
  genome_default_files = 'GRCh38'
  ref_fa = '/projects/omics_share/mouse/GRCm38/genome/sequence/ensembl/v102/Mus_musculus.GRCm38.dna.toplevel.fa'

  // quality stats
  filter_trim="${projectDir}/bin/shared/filter_trim.py"
  min_pct_hq_reads =0

  //bwa mem
  mismatch_penalty="-B 8"
  ref_fa_indices ='/projects/omics_share/mouse/GRCm38/genome/indices/ensembl/v102/bwa/Mus_musculus.GRCm38.dna.toplevel.fa'

  //Read Groups
  read_group_pyfile="${projectDir}/bin/shared/read_group_from_fastq.py"

  // samtools flag used in some steps (need to think of how to handle if tool used multiple times with dif options)
  params.samtools_flag = "-F 1294"  
  
  // Only used if seq_method='pacbio'
  pacbio_mode = 'ccs' // clr
  tandem_repeats = false // true

  //lumpy
  exclude_regions = "/ref_data/mm10.gaps.centro_telo.scafold.exclude.bed"
  vcfSort = "${projectDir}/bin/mmrsvd/vcfSort.sh"
  pbaligner = null // can we actually make a decision yet? or is ti just ngmlr

  // Reference Genome Decisions
  genome_default_files = 'GRCh38'
  genome_base = null // do these exist on our server?
  igenome_base = 's3://ngi-igenomes/igenomes/'
  igenomes_ignore = false // does this ignore downloads/updates or something?

  // Survivor Defaults
  surv_supp   = 1
  surv_type   = 1
  surv_strand = 1
  surv_min    = 30
  surv_dist   = 1000

  breakdancer_r = 5
  breakdancer_s = 50

  delly_genome = null // what makes this different from fasta?

  delly_exc= null // is this an exicutable in the bin?
  vcfs = null // what vcfs are these supposed to be? I dont see them used
  names = null // is this just a single name like $sampleID? or are these mixed samples? I assumed demuxed
  cnvpytor_bin = 1000 // not seeing this used in main
  delly_base = "https://raw.githubusercontent.com/dellytools/delly/master/excludeTemplates/" // not seeing this one either
}

// Set Defaults based on genome_default_files
if (params.genome_default_files=='GRCh37'){
